<%= simple_form_for @restaurant do |f| %>

  <%= f.input :name, label: 'Your restaurant name please' %>
  <%= f.input :address, label: 'Your address pls !' %>
  <%= f.input :phone_number, label:'your phone number !', placeholder: '0672005754'%>
  <%= f.input :category, label: 'Choose your category !', error: 'Choose chinese, italian, japanese, french or belgian'%>
  <%= f.button :submit %>
<% end %>
